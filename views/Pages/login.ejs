<html>
	<head>
		<title>Login</title>
		<meta charset="utf-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1" />
		<link rel="stylesheet" href="/assets/css/styles.css" />
	</head>
	<body class="subpage">

			<% include ../Partials/navbar.ejs %>

		<!-- One -->
			<section id="One" class="wrapper style3">
				<div class="inner">
					<header class="align-center">
						<p>Keep the support going</p>
						<h2>No matter what !</h2>
					</header>
				</div>
			</section>

		<!-- Two -->
			<section id="two" class="wrapper style2">
				<div class="inner">
					<div class="box">
						<div class="content">
							<header class="align-center">
								<h2>Login</h2>
							</header>
							<% if ( typeof(message) !="undefined" ) { %>
                <h2 style = "text-align: center; color:red;"><%= message %></h2>
              <% } %>
              <form action="/login" method="POST">
                <div class="row uniform">
                  
                    <div class="3u 3u$(xsmall)"></div>

                    <div class="6u 12u$(xsmall)">
                      
                      <input type="text" name="username" value="" placeholder="Username" id="username" required/>
                      <input type="password" name="password" value="" placeholder="Password" id="password" required/>

                      <div class = "align-center" style = "margin-top:2%">
                        <button type="submit" class="button special">Login</button>
                      </div>

                    </div>

                </div>
              </form>

						</div>
					</div>
				</div>
			</section>

		<!-- Footer -->
			<footer id="footer">
				<div class="container">
					<ul class="icons">
						<li><a href="#" class="icon fa-twitter"><span class="label">Twitter</span></a></li>
						<li><a href="#" class="icon fa-facebook"><span class="label">Facebook</span></a></li>
						<li><a href="#" class="icon fa-instagram"><span class="label">Instagram</span></a></li>
						<li><a href="#" class="icon fa-envelope-o"><span class="label">Email</span></a></li>
					</ul>
				</div>
				<div class="copyright">
					&copy; Untitled. All rights reserved.
				</div>
			</footer>

		<!-- Scripts -->
			<script src="assets/js/jquery.min.js"></script>
			<script src="assets/js/jquery.scrollex.min.js"></script>
			<script src="assets/js/skel.min.js"></script>
			<script src="assets/js/util.js"></script>
			<script src="assets/js/main.js"></script>

	</body>
</html>
