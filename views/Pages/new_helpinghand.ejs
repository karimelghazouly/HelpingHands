<html>
	<head>
		<title>Hielo by TEMPLATED</title>
		<meta charset="utf-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1" />
		<link rel="stylesheet" href="/assets/css/styles.css" />
	</head>
	<body>

	<!-- Header -->
	<header id="header" class="alt">
		<div class="logo"><a href="/home">Helping Hands</a></div>
		<a href="#menu">Menu</a>
	</header>

	<!-- Nav -->
	<nav id="menu">
		<ul class="links">
			<li><a href="/home">Home</a></li>
			<% if ( userid == 0 ) { %>
				<li><a href="/login">Login</a></li>
			<% } %>
			
			<% if ( userid != 0 ) { %>
				<li><a href="/profile">Profile</a></li>
			<% } %>

			<li><a href="/register">Register</a></li>
			<li><a href="/helpinghands/requests">Help Others</a></li>
			<li><a href="/helpinghands">Ask For help</a></li>
		</ul>
	</nav>

		<!-- Banner -->
			<section class="banner full">
				<article>
					<img src="/images/hand.jpeg" alt="" />
					<div class="inner">
						<header>
							<p>Start giving others a</p>
							<h2>Helping Hand</h2>
						</header>
					</div>
				</article>
			</section>


			<div class="box">
					<div class="content">
						
						<% if ( userid == 0 ) { %>
							<h3 class = "align-center" style=" color:red;">Please login first</h3>
						<% } %>
						
						<% if ( userid != 0 ) { %>
							<header class="align-center">
									<h2>You can start helping others now!</h2>
							</header>
							<form action="/helpinghands/new" method="POST">
								<div class="row uniform">
									
									<div class="3u 3u$(xsmall)"></div>
				
									<div class="6u 12u$(xsmall)">
									  
										<textarea rows = "4" cols = "50" name="desc" placeholder = "Enter the description of the help you are offering" required></textarea>
										<% include ../Partials/categories_dropdown.ejs %>
										<div class="4u 12u$(small)" style = "margin-top:5%">
											<input type="radio" id="online" name="place" value = "online" checked>
											<label for="online">Online</label>
										</div>
										
										<div class="8u 12u$(small)">
											<input type="radio" id="onsite" name="place" value = "onsite" checked>
											<label for="onsite">
												<%= usercountry %> (Your Country)
											</label>
										</div>
	
									  <div class = "align-center" style = "margin-top:2%">
									  <button type="submit" class="button special">Post</button>
									  
									</div>
				
									</div>
								</div>
								
							  </form>
						
						<% } %>
						
					</div>
			</div>
		
		<!-- Footer -->
			<footer id="footer">
				<div class="container">
					<ul class="icons">
						<li><a href="#" class="icon fa-twitter"><span class="label">Twitter</span></a></li>
						<li><a href="#" class="icon fa-facebook"><span class="label">Facebook</span></a></li>
						<li><a href="#" class="icon fa-instagram"><span class="label">Instagram</span></a></li>
						<li><a href="#" class="icon fa-envelope-o"><span class="label">Email</span></a></li>
					</ul>
				</div>
				<div class="copyright">
					&copy; Untitled. All rights reserved.
				</div>
			</footer>

		<!-- Scripts -->
			<script src="/assets/js/jquery.min.js"></script>
			<script src="/assets/js/jquery.scrollex.min.js"></script>
			<script src="/assets/js/skel.min.js"></script>
			<script src="/assets/js/util.js"></script>
			<script src="/assets/js/main.js"></script>

	</body>
</html>